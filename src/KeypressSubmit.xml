<?xml version="1.0" encoding="utf-8"?>
<widget id="ncsu.keypresssubmit.KeypressSubmit" pluginWidget="true" needsEntityContext="false" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Keypress Submit</name>
    <description>Enables forms to be submitted with a keypress.</description>
    <icon>
        
    </icon>
    <properties>
        <propertyGroup caption="General">
            <property key="inputClass" type="string" required="true">
                <caption>Input class name</caption>
                <description>The class name of all inputs to enable the keypress listener on.</description>
            </property>
            <property key="submitClass" type="string" required="true">
                <caption>Submit class name</caption>
                <description>The class name of the submit button. Only one element on the page should have this class, and it should have an on-click event.</description>
            </property>
            <property key="keyCode" type="integer" defaultValue="13" required="true">
                <caption>Key code</caption>
                <description>The key ID of the keypress to listen for. Default is 13 for the enter key.</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
